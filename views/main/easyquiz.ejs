<%- include("./../partials/header.ejs") %>

    <body>
        <%var count=0%>
            <%var num=0%>
                <%- include("./../partials/navbar.ejs") %>
                    <form action="/submit/easy" method="POST" class="form">
                        <div class="carousel">
                            <div class="carousel__item carousel__item--visible">
                                <div class="question">
                                    <span class="ques">
                                        <%=`${++num}`%>. <%=result[0].question%>
                                    </span>
                                </div><br>
                                <input type="radio" id="male" name="ques<%=count%>" value="<%=result[0].answers[0]%>"
                                    required>
                                <label for="male">
                                    <p class="ans">
                                        <%=result[0].answers[0]%>
                                    </p>
                                </label><br>
                                <input type="radio" id="female" name="ques<%=count%>" value="<%=result[0].answers[1]%>"
                                    required>
                                <label for="female">
                                    <p class="ans">
                                        <%=result[0].answers[1]%>
                                    </p>
                                </label><br>
                                <input type="radio" id="other" name="ques<%=count%>" value="<%=result[0].answers[2]%>"
                                    required>
                                <label for="other">
                                    <p class="ans">
                                        <%=result[0].answers[2]%>
                                    </p>
                                </label><br>
                                <input type="radio" id="other" name="ques<%=count%>" value="<%=result[0].answers[3]%>"
                                    required>
                                <label for="other">
                                    <p class="ans">
                                        <%=result[0].answers[3]%>
                                    </p>
                                </label>

                            </div>
                            <%for(var i=1;i<result.length;i++){%>
                                <%count++%>
                                    <div class="carousel__item">
                                        <div class="question">
                                            <span class="ques">
                                                <%=`${++num}`%>. <%=result[i].question%>
                                            </span>
                                        </div><br>
                                        <input type="radio" id="male" name="ques<%=count%>"
                                            value="<%=result[i].answers[0]%>" required>
                                        <label for="male">
                                            <p class="ans">
                                                <%=result[i].answers[0]%>
                                            </p>
                                        </label><br>
                                        <input type="radio" id="female" name="ques<%=count%>"
                                            value="<%=result[i].answers[1]%>" required>
                                        <label for="female">
                                            <p class="ans">
                                                <%=result[i].answers[1]%>
                                            </p>
                                        </label><br>
                                        <input type="radio" id="other" name="ques<%=count%>"
                                            value="<%=result[i].answers[2]%>" required>
                                        <label for="other">
                                            <p class="ans">
                                                <%=result[i].answers[2]%>
                                            </p>
                                        </label><br>
                                        <input type="radio" id="other" name="ques<%=count%>"
                                            value="<%=result[i].answers[3]%>" required>
                                        <label for="other">
                                            <p class="ans">
                                                <%=result[i].answers[3]%>
                                            </p>
                                        </label>

                                    </div>
                                    <%}%>
                                        <div class="carousel__actions">
                                            <button id="carousel__button--prev" type="button" class="prev ">
                                                Prev </button>
                                            <button id="carousel__button--next" type="button" class="next">Next</button>
                                            <button type="submit" value="Submit" class="submit ">Submit</button>
                                        </div>
                        </div>
                    </form>
                    <script src="/js/quiz.js"></script>
                    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
                        integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
                        crossorigin="anonymous"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
                        crossorigin="anonymous"></script>
    </body>